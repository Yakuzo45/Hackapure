{% extends 'Front/layout.html.twig' %}
{% block title %}
    Bilan
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('form') }}
{% endblock %}
{% block body %}
    <h1 class="text-center">Résultats d'analyses à {{ city }}.</h1>
    <h2 class="text-center"> (dernière analyse effectuée le {{ prelevment.dateprel|date('d/m/Y') }}).</h2>
    <h3>Résultat global</h3>
    <p>{{ prelevment.conclusionprel }}</p>
    <div class="container">
        <div class="row justify-content-center">
            <div class="card col-lg-4 col-md-6 col-12 m-1 text-white bg-{{ prelevment.plvconformitebacterio == 'N'? 'danger':'success' }} mb-3"
                 style="max-width: 16rem;">
                <div class="card-body">{{ prelevment.plvconformitebacterio == 'N'? 'Non-c':'C' }}onformité
                    bactériologique
                    du dernier prélèvement aux limites
                    de qualité.
                </div>
            </div>

            <div class="card col-lg-4 col-md-6 col-12 m-1 text-white bg-{{ prelevment.plvconformitechimique == 'N'? 'danger':'success' }} mb-3"
                 style="max-width: 16rem;">
                <div class="card-body">{{ prelevment.plvconformitechimique == 'N'? 'Non-c':'C' }}onformité
                    physico-chimique
                    du dernier prélèvement aux
                    limites de qualité.
                </div>
            </div>
            <div class="card col-lg-4 col-md-6 col-12 m-1 text-white bg-{{ prelevment.plvconformitereferencebact == 'N'? 'danger':'success' }} mb-3"
                 style="max-width: 16rem;">
                <div class="card-body">{{ prelevment.plvconformitereferencebact == 'N'? 'Non-c':'C' }}onformité
                    bactériologique du dernier prélèvement aux
                    références de qualité.
                </div>
            </div>
            <div class="card col-lg-4 col-md-6 col-12 m-1 text-white bg-{{ prelevment.plvconformitereferencechim == 'N'? 'danger':'success' }} mb-3"
                 style="max-width: 16rem;">
                <div class="card-body">{{ prelevment.plvconformitereferencechim == 'N'? 'Non-c':'C' }}onformité chimique
                    du
                    dernier prélèvement aux références
                    de qualité.
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
        <tr>
            <td>Intitulé</td>
            <td>Valeurs relevées</td>
            <td>Valeurs de référence</td>
        </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.libminparametre |capitalize }}</td>
                <td>{{ result.rqana }}{{ result.cdunitereferencesiseeaux =='SANS OBJET'?'': result.cdunitereferencesiseeaux }}</td>
                <td>{{ result.refqual !=''? 'référence : '~result.refqual }}
                    {{ result.limitequal !=''? 'limite : '~result.limitequal }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}