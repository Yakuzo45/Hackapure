{% extends 'Front/layout.html.twig' %}
{% block title %}
    Bilan
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('form') }}
{% endblock %}
{% block body %}
    <h1>Résultats d'analyses à {{ city }} (dernière analyse effectuée le {{ prelevment.dateprel|date('d/m/Y') }}).</h1>
<h2>Résultat global</h2>
    <p>{{ prelevment.conclusionprel }}</p>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <td>Intitulé</td>
                <td>Valeurs relevées</td>
                <td>Valeurs de référence</td>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
        <tr>
            <td>{{ result.libminparametre |capitalize}}</td>
            <td>{{ result.rqana }}{{ result.cdunitereferencesiseeaux =='SANS OBJET'?'': result.cdunitereferencesiseeaux}}</td>
            <td>{{ result.limitequal }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}