{% extends 'base.html.twig' %}

{% block title %}Hello FormInstallController!{% endblock %}

{% block body %}
<div class = container>

    <h1>Installation</h1>
    {{ form_start(form) }}
    <h2>Après compteur</h2>

    <div class="row row-aftermeter">
        <div class="col-12">
            <div class="col-10 card card-aftermeter">
                {{ form_row(form.aftermeter) }}


            </div>


        </div>


    </div>

    <h2>Sous évier</h2>

    <div class="row row-undersink">
        <div class="col-12">
            <div class="col-10 card card-undersink">
                {{ form_row(form.undersink) }}


            </div>
        </div>


    </div>

    <h2>Points d'eau</h2>

    <div class="row row-bath">
        <div class="col-12">
            <div class="col-10 card card-bath">
                {{ form_row(form.bath) }}


            </div>


        </div>


    </div>

    <h2>Ressources alternatives</h2>


    <div class="row btn-new-account pt-3 justify-content-center">
        <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
    </div>

    {{ form_end(form) }}

</div>

{% endblock %}
