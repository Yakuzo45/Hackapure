{% extends 'base.html.twig' %}

{% block title %}Log in !{% endblock %}

{% block stylesheets %}{{ encore_entry_link_tags('login') }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center pt-3">
            <div class="col-7">
                <p class="fa-2x text-center text-primary"><strong>Bienvenue</strong></p>
            </div>
            <div class="col-7">
                <p class="text-primary text-center community"><strong>dans la communaut√©</strong></p>
            </div>
        </div>
        <div class="row justify-content-center pb-3">
            <div class="col-4 col-lg-3">
                <img src="{{ asset('build/images/logo-aquapure.png') }}" class="img-fluid aquapure" alt="logo aquapure">
            </div>
        </div>
        <div class="row justify-content-center text-primary text-center">
            <div class="col-12">
                <p class="mission"></p>
            </div>
        </div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row pt-2">
            <div class="col-12">
                <p class="fa-1x text-primary text-center"><strong>Connectez vous !</strong></p>
            </div>
        </div>
    </div>
    <div class="container">
        <form method="POST">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-4">
                    <label for="inputEmail">Email</label>
                </div>
                <div class="col-12 col-sm-4">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-sm-4 mt-2">
                    <label for="inputPassword">Mot de passe</label>
                </div>
                <div class="col-12 col-sm-4 mt-2">
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="col-5 col-sm-7 offset-sm-4 col-lg-6 offset-lg-4">
                    <button class="btn btn-primary mt-3 mb-3 connexion">{{ button_label|default('Connexion') }}</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
