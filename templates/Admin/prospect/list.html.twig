{% extends 'Admin/layoutAdmin.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('listProspect') }}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section id="listProspects">
        <div class="card">
            <div class="card-header text-center">
                <h2>Listing de tous les Clients</h2>
            </div>
            <div class="card-body">
                <a class="btn btn-primary" href="{{ path('form') }}"><i class="fas fa-user-plus buttonAdd"></i></a>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% if prospects|length == 0 %}
                            <tr>
                                <th colspan="6" class="text-center"><i class="fas fa-exclamation-triangle"></i>  Il n'y a pas d'entrée pour cette table  <i class="fas fa-exclamation-triangle"></i></th>
                            </tr>
                        {% else %}
                            {% for prospect in prospects %}
                                <tr>
                                    <th scope="row">{{ loop.index }}</th>
                                    <td>{{ prospect.firstname }}</td>
                                    <td>{{ prospect.lastname }}</td>
                                    <td>{{ prospect.email }}</td>
                                    <td>{{ prospect.phone }}</td>
                                    <td><a href="#"><i class="fas fa-user-edit"></i></a></td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
