{% extends 'base.html.twig' %}

{% block title %}Add user{% endblock %}

{% block stylesheets %}{{ encore_entry_link_tags('userAdmin') }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center pt-3 mt-5">
            <div class="col-7">
                <p class="fa-4x text-center text-primary mt-5"><strong>Ajouter</strong></p>
            </div>
            <div class="col-7">
                <p class="fa-3x text-primary text-center community mb-5"><strong>un utilisateur</strong></p>
            </div>
        </div>
    </div>

    <div class="container">
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-12 col-sm-4 mt-3">
                <label class="form-label" for="inputEmail">Email</label>
            </div>
            <div class="col-12 col-sm-4 mt-3">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-4 mt-3">
                <label class="form-label" for="inputPassword">Mot de passe</label>
            </div>
            <div class="col-12 col-sm-4 mt-3">
                {{ form_widget(form.password.first) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-4 mt-3">
                <label class="form-label" for="inputSecondPassword">Confirmez le mot de passe</label>
            </div>
            <div class="col-12 col-sm-4 mt-3">
                {{ form_widget(form.password.second) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-4 mt-3">
                <label class="form-label" for="inputRoles">Attribuez un rôle</label>
            </div>
            <div class="col-12 col-sm-4 mt-3">
                {{ form_widget(form.userRole) }}
            </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="col-5 col-sm-7 offset-sm-4 col-lg-6 offset-lg-4 mt-5">
            <button class="btn btn-primary mt-3 mb-3 connexion">{{ button_label|default('Ajouter') }}</button>
            <a type="button" class="btn btn-primary mt-3 mb-3 connexion" href="{{ path('admin_user_index') }}">Retour à la liste</a>
        </div>
    </div>
    {{ form_end(form) }}
    </div>

{% endblock %}
